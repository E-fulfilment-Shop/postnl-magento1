<script type="text/javascript">
    //<![CDATA[
    document.observe('dom:loaded', function() {
        var publicWebshopId  = '<?php echo $this->getPublicWebshopId(); ?>';
        var profileAccessUrl = '<?php echo $this->getUrl('postnl/mijnpakket/getProfileAccess', array('_secure' => true)); ?>';

        var mijnpakketLogin = new MijnpakketLogin(publicWebshopId, profileAccessUrl, true);
        window.mijnpakketLogin = mijnpakketLogin;

        mijnpakketLogin.setCheckout(checkout)
                       .setBilling(billing)
                       .setShipping(shipping);

        <?php if ($_savedData): ?>
            var mijnpakketData = '<?php echo Mage::helper('core')->jsonEncode($_savedData); ?>';
            mijnpakketLogin.setMijnpakketDataJson(mijnpakketData);
        <?php endif; ?>

        mijnpakketLogin.init('postnl_mijnpakket_login', <?php echo $this->isDebugEnabled() ? 'true' : 'false'; ?>);

        var oscLoginLink = $('onestepcheckout-login-link');
        var oscCheckoutContainer = $$('.checkoutcontainer')[0];

        if (oscLoginLink) {
            oscLoginLink.insert({
                after: $('postnl_mijnpakket')
            });
        } else if (oscCheckoutContainer) {
            oscCheckoutContainer.insert({
                before: $('postnl_mijnpakket')
            });
        } else {
            $('postnl_mijnpakket').hide();
        }

        var saveBillingUrl = '<?php echo $this->getUrl('onestepcheckout/ajax/save_billing', array('_secure' => true)); ?>';
        var setMethodsUrl  = '<?php echo $this->getUrl('onestepcheckout/ajax/set_methods_separate', array('_secure' => true)); ?>';

        document.observe('postnl:updateAddressFormsStart', function() {
            var billingSelect = $('billing-address-select');
            if (billingSelect) {
                var newBillingAddressOption = $$("#billing-address-select option[value='']")[0];
                if (!newBillingAddressOption.selected) {
                    newBillingAddressOption.selected = true;
                    billing.newAddress(true);
                }
                billingSelect.hide();
            }

            var shippingSelect = $('shipping-address-select');
            if (shippingSelect) {
                var newShippingAddressOption = $$("#billing-address-select option[value='']")[0];
                if (!newShippingAddressOption.selected) {
                    newShippingAddressOption.selected = true;
                    shipping.newAddress(true);
                }
                shippingSelect.hide();
            }

            $('billing:use_for_shipping_yes').checked = true;
            $('shipping_address').hide();
            $('shipping_address_list').show();
        });

        document.observe('postnl:updateAddressFormsEnd', function() {
            get_save_billing_function(saveBillingUrl, setMethodsUrl, true)();
            $('postnl_login_spinner').hide();
        });
    });
    //]]>
</script>