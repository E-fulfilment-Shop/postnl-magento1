    <?php echo $this->helper('postnl')->__('Expiration date:'); ?>
    <div class="field">
        <label for="billing:postnl_idcheck_expiration_day"><?php echo $this->helper('postnl')->__('Day'); ?></label>
        <select name="postnl_idcheck_expiration_date_day" id="billing:postnl_idcheck_expiration_day">
            <?php for ($i = 1; $i <= 31; $i++): ?>
                <option value="<?php echo $i; ?>"><?php echo $i; ?></option>
            <?php endfor; ?>
        </select>
    </div>

