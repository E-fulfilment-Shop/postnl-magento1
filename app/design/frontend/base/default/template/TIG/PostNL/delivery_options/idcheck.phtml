            <?php foreach ($this->getMonthList() as $value => $label): ?>
                <option value="<?php echo $value; ?>"><?php echo $label; ?></option>
            <?php endforeach; ?>
        </select>
    </div>

    <div class="field">
        <label for="billing:postnl_idcheck_expiration_year"><?php echo $this->helper('postnl')->__('Year'); ?></label>
        <select name="postnl_idcheck_expiration_date_year" id="billing:postnl_idcheck_expiration_year">
            <?php for ($i = date('Y'); $i >= date('Y') - 100; $i--): ?>
                <option value="<?php echo $i; ?>"><?php echo $i; ?></option>
            <?php endfor; ?>
        </select>
    </div>
</div>