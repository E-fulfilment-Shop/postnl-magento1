<?php $_helper = $this->helper('postnl'); ?>
<script type="text/javascript">
    //<![CDATA[
    var indexOf = function(needle) {
        if(typeof Array.prototype.indexOf === 'function') {
            indexOf = Array.prototype.indexOf;
        } else {
            indexOf = function(needle) {
                var i = -1, index = -1;

                for(i = 0; i < this.length; i++) {
                    if(this[i] === needle) {
                        index = i;
                        break;
                    }
                }

                return index;
            };
        }

        return indexOf.call(this, needle);
    };

    document.observe('dom:loaded', function() {
        $$('.massaction-checkbox').each(function(element) {
            element.observe('click', function(event) {
                filteredTypes = [];

                /**
                 * Get each selected row's shipment type and add it to the filter array
                 */
                $$('.massaction-checkbox:checked').each(function(checkbox) {
                    var value = checkbox.value;
                    var shipmentType = $('postnl-shipmenttype-' + value).innerHTML;

                    if (indexOf.call(filteredTypes, shipmentType) == -1) {
                        filteredTypes.push(shipmentType);
                    }
                });

                if (filteredTypes.length > 1) {
                    /**
                     * If the filter array contains more than 1 type, all but the default options should be disabled
                     */
                    filterMassAction('default');
                } else if(filteredTypes.length == 1) {
                    /**
                     * If the filter array contains 1 type we need to filter based on that
                     */
                    filterMassAction(filteredTypes[0]);
                } else {
                    /**
                     * If the filter array is empty, we can enable all options
                     */
                    filterMassAction('all');
                }
            });
        });
    });

    function filterMassAction(type) {
        /**
         * Disable all but the 'default' option
         */
        if (type == 'default') {
            $$('#product_options optgroup').each(function(element) {
                element.disabled = 'disabled';
            });

            return;
        }

        /**
         * Enable all options
         */
        if (type == 'all') {
            $$('#product_options optgroup').each(function(element) {
                element.removeAttribute('disabled');
            });

            return;
        }

        /**
         * Disable all options so we can enable a specific group later
         */
        $$('#product_options optgroup').each(function(element) {
            element.disabled = 'disabled';
        });

        var label = '';
        switch (type) {
            case 'standard':
                label = '<?php echo $_helper->__('Standard options'); ?>';
                break;
            case 'standard_cod':
                label = '<?php echo $_helper->__('Standard COD options'); ?>';
                break;
            case 'pakje_gemak':
                label = '<?php echo $_helper->__('Post Office options'); ?>';
                break;
            case 'pakje_gemak_cod':
                label = '<?php echo $_helper->__('Post Office COD options'); ?>';
                break;
            case 'eps':
                label = '<?php echo $_helper->__('EU options'); ?>';
                break;
            case 'global_pack':
                label = '<?php echo $_helper->__('Global options'); ?>';
                break;
            case 'pakketautomaat':
                label = '<?php echo $_helper->__('Parcel Dispenser options'); ?>';
                break;
            case 'avond':
                label = '<?php echo $_helper->__('Evening Delivery options'); ?>';
                break;
            case 'avond_cod':
                label = '<?php echo $_helper->__('Evening Delivery COD options'); ?>';
                break;
            case 'pakje_gemak_express':
                label = '<?php echo $_helper->__('Early Pickup options'); ?>';
                break;
            case 'pakje_gemak_express_cod':
                label = '<?php echo $_helper->__('Early Pickup COD options'); ?>';
                break;
        }

        $$('#product_options optgroup[label="' + label +'"]').each(function(element) {
            element.removeAttribute('disabled');
        });
    }
    //]]>
</script>
