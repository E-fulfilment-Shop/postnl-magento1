<script type="text/javascript">
    //<![CDATA[
    if (typeof indexOf == 'undefined') {
        var indexOf = function(needle) {
            if(typeof Array.prototype.indexOf === 'function') {
                indexOf = Array.prototype.indexOf;
            } else {
                indexOf = function(needle) {
                    var i = -1, index = -1;

                    for(i = 0; i < this.length; i++) {
                        if(this[i] === needle) {
                            index = i;
                            break;
                        }
                    }

                    return index;
                };
            }

            return indexOf.call(this, needle);
        };
    }

    var filteredTypes = [];
    var useDefault;

    initMassactionFilter = function() {
        useDefault = $('postnl_use_default');

        $$('.massaction-checkbox').each(function(element) {
            element.stopObserving('click');
            element.observe('click', observeMassactionCheckbox.bind(this, element));
        });

        useDefault.stopObserving('click');
        useDefault.observe('click', function() {
            if (filteredTypes.length > 1) {
                useDefault.checked = 'checked';
                useDefault.disabled = true;

                filterMassAction(false);
            } else if (filteredTypes.length == 1) {
                useDefault.disabled = false;

                filterMassAction(filteredTypes[0]);
            } else {
                filterMassAction(false);
            }
        });

        filterMassAction(false);
    };

    observeMassactionCheckbox = function(element) {
        filteredTypes = [];

        /**
         * Get each selected row's shipment type and add it to the filter array
         */
        $$('.massaction-checkbox:checked').each(function(checkbox) {
            var value = checkbox.value;
            var shipmentType = $('postnl-shipmenttype-' + value);
            if (!shipmentType) {
                return;
            }

            var productType = shipmentType.getAttribute('data-product-type');

            if (indexOf.call(filteredTypes, productType) == -1) {
                filteredTypes.push(productType);
            }
        });

        if (filteredTypes.length > 1) {
            useDefault.up().show();
            useDefault.checked = 'checked';
            useDefault.disabled = true;

            filterMassAction(false);
        } else if (filteredTypes.length == 1) {
            useDefault.up().show();
            useDefault.disabled = false;

            filterMassAction(filteredTypes[0]);
        } else {
            useDefault.up().hide();
            filterMassAction(false);
        }
    };

    function filterMassAction(type) {
        $$('#sales_order_grid_massaction-form-additional span.field-row').each(function(element) {
            if (element.down('#postnl_use_default')) {
                return;
            }

            element.hide();
        });

        if (!type) {
            return;
        }

        if ($('postnl_use_default').checked) {
            return;
        }

        $('postnl_' + type + '_options').up().show();
    }

    document.observe('dom:loaded', function() {
        initMassactionFilter();

        $('sales_order_grid_massaction-select').observe('change', initMassactionFilter);
    });
    //]]>
</script>
