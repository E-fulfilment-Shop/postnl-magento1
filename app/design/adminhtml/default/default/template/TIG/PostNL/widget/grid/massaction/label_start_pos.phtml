<div class="entry-edit">
    <span class="field-row">
        <label for="<?php echo $this->getName(); ?>"><a href="#" onclick="choose_print_startpos()"><?php echo $this->getLabel(); ?></a></label>
        <input type="hidden" id="<?php echo $this->getName(); ?>" name="<?php echo $this->getName(); ?>" class="required-entry absolute-advice"/>
    </span>
</div>
<div id="position_picker" class="startpos-picker" style="display:none;">
    <div class="content">
        <table>
            <tbody>
                <tr>
                    <td id="pos1">1</td>
                    <td id="pos2">2</td>
                </tr>
                <tr>
                    <td id="pos3">3</td>
                    <td id="pos4">4</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    //<![CDATA[
    var pickerWindow = $('position_picker');

    var posField = $("<?php echo $this->getName(); ?>");

    var pos1 = $('pos1');
    var pos2 = $('pos2');
    var pos3 = $('pos3');
    var pos4 = $('pos4');
    pos1.observe('click', function() {
        posField.setValue(1);
        pickerWindow.hide();
    });

    pos2.observe('click', function() {
        posField.setValue(2);
        pickerWindow.hide();
    });

    pos3.observe('click', function() {
        posField.setValue(3);
        pickerWindow.hide();
    });

    pos4.observe('click', function() {
        posField.setValue(4);
        pickerWindow.hide();
    });

    pos1.observe('mouseover', function() {
        pos1.addClassName('active');
        pos2.addClassName('active');
        pos3.addClassName('active');
        pos4.addClassName('active');
    });
    pos2.observe('mouseover', function() {
        pos2.addClassName('active');
        pos3.addClassName('active');
        pos4.addClassName('active');
    });
    pos3.observe('mouseover', function() {
        pos3.addClassName('active');
        pos4.addClassName('active');
    });
    pos4.observe('mouseover', function() {
        pos4.addClassName('active');
    });
    pos1.observe('mouseout', function() {
        pos1.removeClassName('active');
        pos2.removeClassName('active');
        pos3.removeClassName('active');
        pos4.removeClassName('active');
    });
    pos2.observe('mouseout', function() {
        pos2.removeClassName('active');
        pos3.removeClassName('active');
        pos4.removeClassName('active');
    });
    pos3.observe('mouseout', function() {
        pos3.removeClassName('active');
        pos4.removeClassName('active');
    });
    pos4.observe('mouseout', function() {
        pos4.removeClassName('active');
    });

    var choose_print_startpos = function() {
        $('position_picker').show();
    };

    //]]>
</script>